{% extends 'sous-categories.twig' %}

{% block nav_2 %}

{% endblock %}

{% block main %}
    <!--Titre-->
    <h3>Les nouveaux vélos</h3>
    <!--BOX articles-->
    <div class="articles_grid wrapper">
    {% for nouveau in nouveau_velo %}
        <!--UN articles-->
        <article class="article_velo">
            <!--BOX img-->
            <div class="image_article">
                <div class="box-info">
                    <!--NEW oui/non-->
                    {% if nouveau.nouveau == 'oui' %}
                        <p class="info_velo_nouveau">nouveau</p>
                    {% endif %}
                    <!--PROMO oui/non-->
                    {% if nouveau.prix_de_base %} 
                        {% set economie = nouveau.prix_de_base - nouveau.prix %}
                        {% set pourcentage = (economie / nouveau.prix_de_base * 100) | round %}
                        <p class="article_velo_pourcentage">-{{ pourcentage }}%</p>
                    {% endif %}
                </div>
                <!--img-->
                <a href="affiche_details_velos.php?id={{ nouveau.id_velo }}">
                    <img src="{{ nouveau.img_couleur_1 }}" alt="image du velo {{ nouveau.nom_velo }}">
                </a>
            </div>
            <!--BOX texte-->
            <div class="texte_article">
                <!--nom vélo-->
                <h4>{{ nouveau.nom_velo }}</h4>
                <!--prix-->
                <p class="prix">
                    <span class="bold">{{ nouveau.prix }} €</span>
                    {% if nouveau.prix_de_base %} 
                    <span class="couleur_gris"><span class="texte_barrer">{{ nouveau.prix_de_base }} €</span> économisez {{ nouveau.prix_de_base - nouveau.prix }} €</span>
                    {% endif %}
                </p>
                <!--par mois-->
                <p class="texte_surligner par_mois">ou {{ nouveau.prix_par_mois }} € par mois</p>
            </div>
        </article>
    {% endfor %}
    </div>
{% endblock %}
